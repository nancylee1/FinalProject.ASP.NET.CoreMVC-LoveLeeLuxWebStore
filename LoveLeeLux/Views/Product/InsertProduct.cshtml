@model Product

@section css{
    <link rel="stylesheet" href="~/css/InsertProduct.css" asp-append-version="true" />
}
    <body id="body" style="background-image: url(/images/create.jpg)">
        <h2>Create a New Product</h2>

        @using (Html.BeginForm("InsertProductToDatabase", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input asp-for="ProductID" type="hidden" value="" />
        <br>
        <br>

        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" name="Name" class="form-control" value="" />
        <br>
        <br>

        <label asp-for="Price" class="control-label">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control" />
        <br>
        <br>

        <label asp-for="Description" class="control-label">Description</label>
        <input type="text" name="Description" class="form-control" value="" />
        <br>
        <br>

        <div class="form-group">
            <label for="">Select a Category</label>
            <select class="form-control" name="CategoryID" value="">
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.CategoryID">@cat.CategoryID @cat.Name</option>
                }
            </select>
        </div>
        <br>
        <br>
        <div class="form-group">
            @*// NOTE: IMAGE UPLOAD IS NOT REQUIRED HERE - so there is code in view product for 'image not found.jpg'*@
            <label for=" ">Upload Image</label>
            <input class="form-control" type="file" name="ImageUpload" accept="image/*">
        </div>
        <br>
        <br>

        <input type="submit" value="Create Product" class="btn btn-warning" />
    }
</body>