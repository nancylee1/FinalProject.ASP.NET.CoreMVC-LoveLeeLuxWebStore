<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoveLeeLux</title>
    @RenderSection("css", false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoveLeeLux.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <!--JS header-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-lg navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <h3 class="logo" style="color: white; font-style: italic; font-family: 'Harlow Solid'; font-weight: bold; font-size: 40px; justify-content: center; -webkit-text-stroke-width: 1px; -webkit-text-stroke-color: palevioletred;"><span>LoveLeeLux</span></h3>
                @* <h3 class="logo"><span>LoveLeeLux</span></h3>*@
                @*
                <a id="logo" class="navbar-brand" href="#">
                <img src="/images/logo.png" alt="logo.png">
                </a>*@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">  </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home &nbsp;</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="Index">Products &nbsp;&nbsp;&nbsp;</a>
                        </li>

                        <form class="form-inline my-2 my-lg-0">
                            <div class="input-group mb-2 mr-sm-2">
                                <input class="form-control mr-sm-2" type="search" placeholder="Enter Item to Search" aria-label="Search" style:"font-size: 17px;" name="SearchProduct">
                                <button class="btn btn-secondary my-2 my-sm-0" type="submit" id="button" asp-action="ProductSearch" asp-controller="Product">Search</button>
                            </div>
                        </form>
                    </ul>

                    @* ***************user login button*@

                    <div class="dropdown">
                        <button class="btn btn-dark dropdown-toggle" style="color: white; font-weight: bold; border: 1px solid white;" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-person" viewBox="0 0 16 16">
                                <path d="M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2v9.255S12 12 8 12s-5 1.755-5 1.755V2a1 1 0 0 1 1-1h5.5v2z" />
                            </svg>&nbsp;Log In
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="" " class="signin" onclick="">Log In</a></li>
                            <div class="form">
                                <input type="text" value="" name="myinput" id="myinput" />
                                <input type="submit" name="submit" value="submit" />
                            </div>
                            <li><a class="dropdown-item" href="#" onclick="registerButton()">Register</a></li>
                            <li><a class="dropdown-item" href="#" onclick="signoutButton()">Sign Out</a></li>
                        </ul>
                    </div>
                    &nbsp; &nbsp;

                    @* ****************Shopping cart button*@


                    <li class="btn btn-dark" style="color: white; font-weight: bold; justify-content: right; border: 1px solid white;" onclick="shoppingCartButton()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                            <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                        </svg>&nbsp;Cart
                    </li>
                            @*
                    end of shopping button*@


                </div>
            </div>
        </nav>
    </header>
    <div class="main">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>


    <footer class="border-bottom footer text-muted">
        <div id="footer" class="container">
            &copy; 2022 - LoveLeeLux - All rights reserved  &nbsp;
            <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: black; font-size: 14px; font-weight: bold;">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="~/js/toastr.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
